<%- include ("../partials/header") %>
<div class="container">
  <div class="box u-mt-10">
    <div class="add-new-book-form">
      <form action="/author/book/" method="POST">
          <div class="field">
            <h5 class="subtitle is-3 is-spaced">Add Book</h5>
          </div>
          <div class="field">
            <div class="control">
              <input type="text" name="book[bookTitle]" class="input" placeholder="Title">
            </div>
          </div>
          <div class="field">
            <div class="control">
              <input type="text" name="book[category]" class="input" placeholder="Category">
            </div>
          </div>
          <div class="field">
            <div class="control">
              <textarea name="book[bookDescription]" class="textarea" placeholder="Book Description"></textarea>
            </div>
          </div>
          <div class="field">
            <div class="control">
                <button id="save-button" class="button is-primary is-outlined">Save</button>
            </div>
        </div>
      </form>
    </div>
  </div>
</div>

