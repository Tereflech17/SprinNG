<%- include ("../partials/header") %>
<div class="container">
    <div class="box u-mt-10">
        <div class="level is-mobile">
            <div class="level-left">
                <div class="level-item">
                    <p class="title is-size-4-mobile is-size-3-desktop is-size-3-tablet">Published Articles</p>
                </div>
            </div>
            <div class="level-right">
                <div class="level-item">
                    <span class="icon is-small">
                        <a href="/author/article/new"><i class="fa-solid fa-plus pad-right-min fa-weight-light"></i></a>
                    </span>
                </div>
                <!-- <div class="level-item">
                    <span class="icon is-small">
                    <a href="/author/book/details"><i class="fa-regular fa-pen-to-square"></i></a>
                    </span>
                </div> -->
            </div>
        </div>
        <% articles.forEach(function(article){ %>
            <div class="level-right">
                <div class="level-item">
                    <span class="icon is-small">
                    <a href="/author/article/details/<%= article._id %>/edit"><i class="fa-regular fa-pen-to-square"></i></a>
                    </span>
                </div>
            </div>
        <article class="media">
            <figure class="media-left">
              <p class="image is-64x64">
                <img src="https://bulma.io/images/placeholders/128x128.png">
              </p>
            </figure>
            <div class="media-content">
              <div class="content">
                <div>
                  <strong><%= article.articleTitle %></strong> 
                  <br>
                  <p><%= article.articleDescription %></p>
                </div>
              </div>
              <nav class="level is-mobile">
                <div class="level-left">
                  <a class="level-item">
                    <span class="icon is-small"><i class="fas fa-reply"></i></span>
                  </a>
                  <a class="level-item">
                    <span class="icon is-small">
                        <a href=""><i class="fas fa-retweet"></i></a>
                    </span>
                  </a>
                  <a class="level-item">
                    <span class="icon is-small">
                        <a href=""><i class="fas fa-heart"></i></a>
                    </span>
                  </a>
                </div>
              </nav>
            </div>
      
          </article>
          
          <%}) %>
        
</div>

